{% extends "View/layout.twig" %}
{% block pagetitle %}Ranking{% endblock %}
{% block title %}Ranking{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/node_modules/datatables/media/js/jquery.dataTables.js"></script>
    <script src="{{ base_url() }}/assets/js/pages/rankingjs/frmRanking.js"></script>
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/datatables/media/css/jquery.dataTables.css">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    {% if attributes.avatar is defined %}
                        <img class="profile-user-img img-fluid rounded-circle"
                                id="img-frmuser-avatar"
                                src="{{ attributes.avatar }}"
                                alt="Você">
                    {% else %}
                        <img class="profile-user-img img-fluid rounded-circle"
                                id="img-frmuser-avatar"
                                src="{{ base_url() }}/assets/img/student-avatar.png"
                                alt="Você">
                    {% endif %}

                    <h3 class="profile-username text-center">   {{ attributes.fullname }}</h3>
                    <h4 class="text-center">    Você respondeu     {{ attributes.answered_activities }} {% if attributes.answered_activities < 2 %} questão {% else %} questões {% endif %}.</h4>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        <input type="text" class="form-control ml-2" placeholder="Buscar" id="frmuser-search">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="box-body table-responsive no-padding">
                        <table id="table-classification" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 90px;">#</th>
                                    <th>Nome</th>
                                    <th>Questões acertadas</th>
                                </tr>
                            </thead>

                            <tbody></tbody>

                            <tfoot>
                                <tr>
                                    <th style="width: 90px;">#</th>
                                    <th>Nome</th>
                                    <th>Questões acertadas</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}