{% extends "View/layout.twig" %}

{% set page_title = "Histórico" %}

{% block styles %}
    <link rel="stylesheet" href="{{ base_url() }}/dist/css/history/style.min.css">
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="{{ base_url() }}/dist/js/history.js"></script>
{% endblock %}

{% block content %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for("dashboard.index") }}">Dashboard</a></li>
        <li class="breadcrumb-item active">Histórico de Submissões</li>
    </ul>

    <div class="row my-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ attributes.fullname }}</h5>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-0">Questões respondidas: {{ history|length }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <table data-toggle="table"
                data-modile-reponsive="true"
                data-page-size="10"
                data-search="true">
                
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Linguagem</th>
                        <th>Tempo de execução</th>
                    </tr>
                </thead>

                <tbody>
                    {% for activity in history %}
                        <tr>
                            <td>{{ activity.activity.title }}</td>
                            <td>{{ activity.language == "lua" ? "Lua" : activity.language == "cpp" ? "C/C++" : activity.language == "python" ? "Python" : "Desconhecido" }}</td>
                            <td>{{ activity.time|number_format(4, '.', ',') }}s</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="">
            <a href="javascript:history.back()" class="btn btn-danger cosmo-color-1 float-right">Voltar</a>
    </div>
{% endblock %}

