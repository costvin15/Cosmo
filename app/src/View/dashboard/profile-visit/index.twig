{% extends "/View/layout.twig" %}
{% set page_title = "Perfil" %}

{% block scripts %}
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/dist/css/profile-visit/style.min.css">
{% endblock %}

{% block content %}   
    <div class = "row">
        <div class = "col-md-4 mt-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">
                        Troféus e Títulos de {{attributes.fullname}} <i class = "fas fa-bolt"></i>
                    </h5>
                </div>

                <div class = "btn-group mt-0">
                    <button type="button" class="btn btn-1" data-toggle="collapse" data-target="#cd-1" ><i class="fas fa-crown"></i></button>
                    <button type="button" class="btn btn-2" data-toggle="collapse" data-target="#cd-2" ><i class="fas fa-trophy"></i></button>
                </div>

                <div id = "cd-1" class = "collapse">
                    <div class="card border-cosmo-color-1 mx-sm-1 p-3 mt-4">
                        <div class="card border-cosmo-color-1 shadow text-cosmo-color-1 p-3 card-h"><span class="fas fa-crown" aria-hidden="true"></span></div>
                        <div class="mt-3"><h4>Títulos</h4></div>
                        <div class="mt-2"><h6>Infante</h6></div>
                        <div class="mt-2"><h6>Infante</h6></div>
                        <div class="mt-2"><h6>***</h6></div>
                    </div>
                </div>

                <div id = "cd-2" class = "collapse">
                    <div class="card border-cosmo-color-8 mx-sm-1 p-3 mt-4">
                        <div class="card border-cosmo-color-8 shadow text-cosmo-color-8 p-3 card-h"><span class="fas fa-trophy" aria-hidden="true"></span></div>
                        <div class="mt-3"><h4>Troféus</h4></div>
                        <div class="mt-2"><h6>*IF's Ouro*</h6></div>
                        <div class="mt-2"><h6>*While's Bronze*</h6></div>
                        <div class="mt-2"><h6>***</h6></div>
                    </div>
                </div>

            </div>
        </div>

        {# middle profile area #}
        <div class="col-md-4 mt-2">
            <div class = "card p-card">
                <div class = "card-header p-header">
                    <h5 class = "card-title mb-0 text-center">Sua foto e seus dados <i class = "fas fa-bolt"></i></h5>
                </div>

                <div class="card-up"></div>

                <div class="avatar mx-auto">
                    <img id="img-frmuser-avatar" src= "{{attributes.avatar}}" class="rounded-circle" alt=""/>
                </div>

                <div class = "card-body p-body mt-0">
                    <h2 class="card-title">{{attributes.fullname}}</h2>
                    <hr>
                    <h3><span>Título: {{attributes.fulltitle}}</span>
                    <span>Gold: 1000</span>
                    <span>Level: 15</span>
                    <span>Questões feitas: 14</span>
                    <span>Submissões: 120</span></h3>
                </div>

                <div class = "card-footer p-footer">
                    <a class = "btn" href = "../profile"> Voltar </a>
                </div>
            </div> 
        </div>

        <div class = "col-md-4 bg-dark mt-2 text-center text-danger">
            <h2>Skills(ta no pc do laws)</h2>
        </div>
        
    </div>

{% endblock %}