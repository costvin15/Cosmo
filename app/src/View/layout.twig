<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Cosmo | {% block title %}{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/ionicons/dist/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/skins/_all-skins.min.css">

    <link rel="stylesheet" href="{{ base_url() }}/node_modules/sweetalert2/dist/sweetalert2.css">

    <link rel="stylesheet" href="{{ base_url() }}/assets/css/style.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/dist/cosmo.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% block css %}{% endblock %}
</head>
<body class="hold-transition skin-blue layout-top-nav">
<!-- Site wrapper -->
<div class="wrapper">

    <header class="main-header">
        <nav class="navbar navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="{{ path_for('dashboard.index') }}" class="navbar-brand"><b>Cosmo</b>Telemídia</a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>

                <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ path_for('dashboard.index') }}">
                                <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path_for('dashboard.history') }}">
                                <i class="fa fa-bar-chart"></i> <span>Histórico de atividades</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        {% if (attributes.administrator) %}
                        <!-- Administrator Control -->
                        <li>
                            <a href="{{ path_for("administrator.control.index") }}" data-toggle="tooltip" data-placement="bottom" title="Área do Adminitrador">
                                <i class="fa fa-wrench" aria-hidden="true"></i>
                            </a>
                        </li>
                        {% endif %}

                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="{{ attributes.avatar }}" class="user-image"
                                     alt="User Image">
                                <span class="hidden-xs">{{ attributes.fullname }}</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="{{ attributes.avatar }}" class="img-circle"
                                         alt="User Image">
                                    <p>
                                        {{ attributes.fullname }}
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="{{ path_for("dashboard.profile") }}" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="{{ path_for('login.logout') }}" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="loader-modal" style="display: none;">
        <img src="{{ base_url() }}/assets/img/loader.svg"/>
    </div>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {% block pagetitle %}{% endblock %}
                <small>{% block pagedescription %}{% endblock %}</small>
            </h1>
            {% block breadcump %}{% endblock %}
        </section>

        <!-- Main content -->
        <section class="content">
            {% block content %}{% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 0.1.1
        </div>
        <strong>Copyright &copy; 2014-2016 <a href="http://almsaeedstudio.com">Almsaeed Studio</a> e <a href="#">Telemídia</a></strong>.
        All rights
        reserved.
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Create the tabs -->
        <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <!-- Home tab content -->
            <div class="tab-pane" id="control-sidebar-home-tab"></div>
            <!-- /.tab-pane -->
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 2.2.3 -->
<script src="{{ base_url() }}/node_modules/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="{{ base_url() }}/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="{{ base_url() }}/node_modules/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="{{ base_url() }}/node_modules/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="{{ base_url() }}/assets/js/app.min.js"></script>
<!--Sweet Alert -->
<script src="{{ base_url() }}/node_modules/sweetalert2/dist/sweetalert2.min.js" type="text/javascript" charset="utf-8"></script>
<!--BlockUI -->
<script src="{{ base_url() }}/vendor/jquery-blockui/jquery.blockUI.js"></script>

<script src="{{ base_url() }}/assets/js/service/dist/service.cosmo.min.js"></script>

<script>
    window.cosmo.urlbase = "{{ base_url() }}";
</script>

{% block scripts %}{% endblock %}
</body>
</html>