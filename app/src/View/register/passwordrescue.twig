{% extends "View/layout_login.twig" %}

{% block title %}Recuperar Senha{% endblock %}

{% block content %}
    <div class="register-box">
        <div class="login-logo">
            <a href="{{ base_url() }}"><b>Cosmo</b>Telem√≠dia</a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Recuperar Senha</p>

            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email" id="frmrescue-email" name="frmrescue-email">
