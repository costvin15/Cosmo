            </div>
            <div class="row">
                <div class="col-xs-5">
                    &nbsp;
                </div>
                <!-- /.col -->
                <div class="col-xs-7">
                    <button type="button" class="btn btn-primary btn-block btn-flat" id="btnRescuePassword">Recuperar senha</button>
                </div>
                <!-- /.col -->
            </div>

            <a href="{{ path_for('login.index') }}" class="text-center">Cancelar</a>
        </div>
        <!-- /.form-box -->
    </div>
{% endblock %}

{% block javascript %}
    <script src="{{ base_url() }}/assets/js/pages/registerjs/dist/registerjs.min.js"></script>
{% endblock %}